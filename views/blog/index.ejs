<main>
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center">
                            <h2>最新消息</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!--================Blog Area =================-->
    <section class="blog_area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5 mb-lg-0">
                    <div class="blog_left_sidebar">
                        <% if (typeof posts !== 'undefined' && posts && posts.length > 0) { %>
                        <% posts.forEach((post) => { %>
                        <article class="blog_item">
                            <div class="blog_item_img">
                                <% if (post.featuredImage) { %>
                                <img class="card-img rounded-0" src="<%= post.featuredImage.startsWith('http') ? post.featuredImage : '/' + post.featuredImage %>" alt="<%= post.title %>">
                                <% } else { %>
                                <img class="card-img rounded-0" src="assets/img/blog/single_blog_1.png" alt="<%= post.title %>">
                                <% } %>
                                <a href="#" class="blog_item_date">
                                    <h3><%= post.publishedAt ? new Date(post.publishedAt).getDate() : new Date(post.createdAt).getDate() %></h3>
                                    <p><%= post.publishedAt ? new Date(post.publishedAt).toLocaleDateString('zh-TW', { month: 'short' }) : new Date(post.createdAt).toLocaleDateString('zh-TW', { month: 'short' }) %></p>
                                </a>
                            </div>
                            <div class="blog_details">
                                <a class="d-inline-block" href="#">
                                    <h2 class="blog-head" style="color: #2d2d2d;"><%= post.title %></h2>
                                </a>
                                <p><%= post.excerpt || (post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content) %></p>
                                <ul class="blog-info-link">
                                    <% if (post.category) { %>
                                    <li><a href="#"><i class="fa fa-user"></i> <%= post.category %></a></li>
                                    <% } %>
                                    <li><a href="#"><i class="fa fa-eye"></i> <%= post.viewCount || 0 %> 次瀏覽</a></li>
                                </ul>
                            </div>
                        </article>
                        <% }); %>
                        <% } else { %>
                        <div class="text-center py-5">
                            <p class="text-muted">目前沒有任何最新消息</p>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget search_widget">
                            <form action="/blog" method="GET">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input 
                                            type="text" 
                                            class="form-control" 
                                            name="search"
                                            placeholder='搜尋關鍵字'
                                            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                                            onfocus="this.placeholder = ''"
                                            onblur="this.placeholder = '搜尋關鍵字'">
                                        <div class="input-group-append">
                                            <button class="btns" type="submit"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                    type="submit">搜尋</button>
                                <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                                <a href="/blog" class="btn btn-link w-100 mt-2" style="text-decoration: none;">清除搜尋</a>
                                <% } %>
                            </form>
                        </aside>
                        <aside class="single_sidebar_widget post_category_widget">
                            <h4 class="widget_title" style="color: #2d2d2d;">分類</h4>
                            <% if (typeof selectedCategory !== 'undefined' && selectedCategory) { %>
                            <a href="/blog" class="btn btn-sm btn-link mb-2" style="text-decoration: none; font-size: 12px;">清除分類篩選</a>
                            <% } %>
                            <ul class="list cat-list">
                                <% if (typeof categories !== 'undefined' && categories && Object.keys(categories).length > 0) { %>
                                <% Object.keys(categories).forEach(category => { %>
                                <li>
                                    <a href="/blog?category=<%= encodeURIComponent(category) %>" class="d-flex <%= typeof selectedCategory !== 'undefined' && selectedCategory === category ? 'active' : '' %>">
                                        <p><%= category %></p>
                                        <p>(<%= categories[category] %>)</p>
                                    </a>
                                </li>
                                <% }); %>
                                <% } else { %>
                                <li>
                                    <a href="#" class="d-flex">
                                        <p class="text-muted">暫無分類</p>
                                    </a>
                                </li>
                                <% } %>
                            </ul>
                        </aside>
                        <aside class="single_sidebar_widget popular_post_widget">
                            <h3 class="widget_title" style="color: #2d2d2d;">最新文章</h3>
                            <% if (typeof recentPosts !== 'undefined' && recentPosts && recentPosts.length > 0) { %>
                            <% recentPosts.forEach((post) => { %>
                            <div class="media post_item">
                                <% if (post.featuredImage) { %>
                                <img src="<%= post.featuredImage.startsWith('http') ? post.featuredImage : '/' + post.featuredImage %>" alt="<%= post.title %>">
                                <% } else { %>
                                <img src="assets/img/post/post_1.png" alt="<%= post.title %>">
                                <% } %>
                                <div class="media-body">
                                    <a href="/blog/<%= post.slug || post.id %>">
                                        <h3 style="color: #2d2d2d;"><%= post.title.length > 30 ? post.title.substring(0, 30) + '...' : post.title %></h3>
                                    </a>
                                    <p><%= post.publishedAt ? new Date(post.publishedAt).toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' }) : new Date(post.createdAt).toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                                </div>
                            </div>
                            <% }); %>
                            <% } else { %>
                            <p class="text-muted">暫無最新文章</p>
                            <% } %>
                        </aside>
                        <aside class="single_sidebar_widget tag_cloud_widget">
                            <h4 class="widget_title" style="color: #2d2d2d;">標籤雲</h4>
                            <% if (typeof selectedTag !== 'undefined' && selectedTag) { %>
                            <a href="/blog" class="btn btn-sm btn-link mb-2" style="text-decoration: none; font-size: 12px;">清除標籤篩選</a>
                            <% } %>
                            <ul class="list">
                                <% if (typeof tags !== 'undefined' && tags && tags.length > 0) { %>
                                <% tags.forEach((tag) => { %>
                                <li>
                                    <a href="/blog?tag=<%= encodeURIComponent(tag) %>" class="<%= typeof selectedTag !== 'undefined' && selectedTag === tag ? 'active' : '' %>"><%= tag %></a>
                                </li>
                                <% }); %>
                                <% } else { %>
                                <li>
                                    <span class="text-muted">暫無標籤</span>
                                </li>
                                <% } %>
                            </ul>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->
</main>