<main>
  <!--? slider Area Start-->
  <div class="slider-area position-relative">
      <div class="slider-active">
          <!-- Single Slider -->
          <div class="single-slider slider-height d-flex align-items-center">
              <div class="container">
                  <div class="row">
                      <div class="col-xl-7 col-lg-9 col-md-8 col-sm-9">
                          <div class="hero__caption">
                              <h1 class="cd-headline letters scale" style="font-size: 56px;">
                                  民間公證人張加慶事務所
                                  <strong class="cd-words-wrapper">
                                      <b class="is-visible">您的公證新選擇</b>
                                      <b>專業・用心・熱忱</b>
                                  </strong>
                              </h1>
                              <a href="https://fb.com/notary40/" class="btn hero-btn" data-animation="fadeInLeft" data-delay="0.5s">馬上預約 <i class="ti-arrow-right"></i></a>
                          </div>
                      </div>
                  </div>
              </div>          
          </div>
      </div>
  </div>
  <!-- slider Area End-->
  <!--? About Start-->
  <div class="about-area section-padding2">
      <div class="container">
          <div class="row">
            <!-- 首頁公布欄 -->
              <% if (typeof announcements !== 'undefined' && announcements && announcements.length > 0) { %>
                <% announcements.forEach((announcement) => { %>
                  <div class="col-xl-12 col-lg-12 col-md-12 col-12 mb-4">
                    <% if (announcement.linkUrl) { %>
                      <a href="<%= announcement.linkUrl %>" target="_blank" style="display: block; text-decoration: none;">
                    <% } %>
                    
                    <!-- 圖片模式 -->
                    <% if (announcement.imageUrl) { %>
                      <div class="announcement-image">
                        <img 
                          src="<%= announcement.imageUrl.startsWith('http') ? announcement.imageUrl : '/' + announcement.imageUrl %>" 
                          alt="<%= announcement.title %>" 
                          style="width: 100%; height: auto; object-fit: contain; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"
                        >
                      </div>
                    <% } %>
                    
                    <!-- 文字模式 -->
                    <% if (!announcement.imageUrl && announcement.content) { %>
                      <div class="card announcement-text" style="border: none; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                        <div class="card-body" style="padding: 30px;">
                          <% if (announcement.title) { %>
                            <h4 class="card-title mb-3" style="color: #333; font-weight: 600;">
                              <%= announcement.title %>
                            </h4>
                          <% } %>
                          <div class="card-text" style="color: #666; line-height: 1.8; white-space: pre-line;">
                            <%= announcement.content %>
                          </div>
                        </div>
                      </div>
                    <% } %>
                    
                    <!-- 只有標題的情況 -->
                    <% if (!announcement.imageUrl && !announcement.content && announcement.title) { %>
                      <div class="card announcement-text" style="border: none; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                        <div class="card-body" style="padding: 30px;">
                          <h4 class="card-title mb-0" style="color: #333; font-weight: 600;">
                            <%= announcement.title %>
                          </h4>
                        </div>
                      </div>
                    <% } %>
                    
                    <% if (announcement.linkUrl) { %>
                      </a>
                    <% } %>
                  </div>
                <% }); %>
              <% } else { %>
                <!-- 預設顯示（當沒有公告時） -->
                <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                  <img src="assets/img/index/index3.jpg" style="width: 100%; height: 100%;">
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                  <img src="assets/img/index/index.png" style="width: 100%; height: 100%;">
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                  <img src="assets/img/index/index2.png" style="width: 100%; height: 100%;">
                </div>
              <% } %>
          </div>
      </div>
  </div>
  <!-- About  End-->
</main>