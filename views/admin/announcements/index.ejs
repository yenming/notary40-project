<!-- Success Message -->
<% if (typeof successMessage !== 'undefined' && successMessage) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <i class="fas fa-check-circle me-2"></i>
  <%= successMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- Announcements Table Card -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-bullhorn me-1"></i>
      公告欄列表
    </h3>
    <div class="card-tools">
      <a href="/admin/announcements/create" class="btn btn-primary btn-sm">
        <i class="fas fa-plus me-1"></i>
        新增公告
      </a>
    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-4">
        <div class="info-box">
          <span class="info-box-icon bg-info elevation-1"><i class="fas fa-bullhorn"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">總公告數</span>
            <span class="info-box-number"><%= announcements ? announcements.length : 0 %></span>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="info-box">
          <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check-circle"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">啟用中</span>
            <span class="info-box-number"><%= announcements ? announcements.filter(a => a.isActive).length : 0 %></span>
          </div>
        </div>
      </div>
    </div>
    
    <table id="announcementsTable" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th style="width: 50px;">順序</th>
          <th>標題</th>
          <th>圖片預覽</th>
          <th>狀態</th>
          <th>建立時間</th>
          <th style="width: 200px;">操作</th>
        </tr>
      </thead>
      <tbody>
        <% if (announcements && announcements.length) { %>
        <% announcements.forEach((announcement) => { %>
        <tr>
          <td><%= announcement.order %></td>
          <td>
            <strong><%= announcement.title %></strong>
            <% if (announcement.content) { %>
            <br>
            <small class="text-muted"><%= announcement.content.length > 50 ? announcement.content.substring(0, 50) + '...' : announcement.content %></small>
            <% } %>
          </td>
          <td>
            <% if (announcement.imageUrl) { %>
            <img src="<%= announcement.imageUrl.startsWith('http') ? announcement.imageUrl : '/' + announcement.imageUrl %>" alt="<%= announcement.title %>" style="max-width: 100px; max-height: 60px; object-fit: cover;" class="img-thumbnail">
            <% } else { %>
            <span class="text-muted">無圖片</span>
            <% } %>
          </td>
          <td>
            <% if (announcement.isActive) { %>
            <span class="badge bg-success">啟用</span>
            <% } else { %>
            <span class="badge bg-secondary">停用</span>
            <% } %>
          </td>
          <td>
            <i class="far fa-calendar me-1"></i>
            <%= new Date(announcement.createdAt).toLocaleDateString('zh-TW', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric'
            }) %>
          </td>
          <td>
            <div class="btn-group" role="group">
              <a href="/admin/announcements/<%= announcement.id %>" class="btn btn-sm btn-info" title="查看">
                <i class="fas fa-eye"></i>
              </a>
              <a href="/admin/announcements/<%= announcement.id %>/edit" class="btn btn-sm btn-warning" title="編輯">
                <i class="fas fa-edit"></i>
              </a>
              <form method="POST" action="/admin/announcements/<%= announcement.id %>/delete" class="d-inline" onsubmit="return confirm('確定要刪除此公告嗎？此操作無法復原。');">
                <button type="submit" class="btn btn-sm btn-danger" title="刪除">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
        <% } else { %>
        <tr>
          <td colspan="6" class="text-center py-5">
            <i class="fas fa-bullhorn fa-3x text-muted mb-3 d-block"></i>
            <p class="text-muted mb-0">目前沒有任何公告</p>
            <a href="/admin/announcements/create" class="btn btn-primary mt-3">
              <i class="fas fa-plus me-1"></i>
              新增第一個公告
            </a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <!-- /.card-body -->
</div>
<!-- /.card -->

