<div class="row g-4">
  <div class="col-lg-3 col-md-6">
    <div class="card bg-secondary text-light">
      <div class="card-body">
        <h5 class="card-title text-uppercase fs-6">Total Users</h5>
        <p class="display-5 fw-bold"><%= typeof stats !== "undefined" ? stats.users : "--" %></p>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="card bg-dark border border-secondary">
      <div class="card-body">
        <h5 class="card-title">Welcome Back, <%= user?.name || "Admin" %></h5>
        <p class="card-text text-muted">
          Use the navigation to manage store content, user accounts, and analyze performance metrics.
        </p>
        <a class="btn btn-outline-light" href="/admin/users">
          <i class="fa-solid fa-users me-2"></i>
          Manage Users
        </a>
      </div>
    </div>
  </div>
</div>

