<!-- Success Message -->
<% if (typeof successMessage !== 'undefined' && successMessage) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <i class="fas fa-check-circle me-2"></i>
  <%= successMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- Users Table Card -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-users me-1"></i>
      用戶列表
    </h3>
    <div class="card-tools">
      <a href="/admin/users/create" class="btn btn-primary btn-sm">
        <i class="fas fa-user-plus me-1"></i>
        新增用戶
      </a>
    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-4">
        <div class="info-box">
          <span class="info-box-icon bg-info elevation-1"><i class="fas fa-users"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">總用戶數</span>
            <span class="info-box-number"><%= users ? users.length : 0 %></span>
          </div>
        </div>
      </div>
    </div>
    
    <table id="usersTable" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th style="width: 50px;">ID</th>
          <th>用戶資訊</th>
          <th>電子郵件</th>
          <th>註冊時間</th>
          <th style="width: 200px;">操作</th>
        </tr>
      </thead>
      <tbody>
        <% if (users && users.length) { %>
        <% users.forEach((user) => { %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <div class="d-flex align-items-center">
              <div class="img-circle elevation-2 bg-primary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                <span class="text-white fw-bold"><%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %></span>
              </div>
              <div>
                <strong><%= user.name || '未命名用戶' %></strong>
                <br>
                <small class="text-muted">ID: <%= user.id %></small>
              </div>
            </div>
          </td>
          <td>
            <a href="mailto:<%= user.email %>">
              <i class="fas fa-envelope me-1"></i>
              <%= user.email %>
            </a>
          </td>
          <td>
            <i class="far fa-calendar me-1"></i>
            <%= new Date(user.createdAt).toLocaleDateString('zh-TW', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit'
            }) %>
          </td>
          <td>
            <div class="btn-group" role="group">
              <a href="/admin/users/<%= user.id %>" class="btn btn-sm btn-info" title="查看">
                <i class="fas fa-eye"></i>
              </a>
              <a href="/admin/users/<%= user.id %>/edit" class="btn btn-sm btn-warning" title="編輯">
                <i class="fas fa-edit"></i>
              </a>
              <form method="POST" action="/admin/users/<%= user.id %>/delete" class="d-inline" onsubmit="return confirm('確定要刪除此用戶嗎？此操作無法復原。');">
                <button type="submit" class="btn btn-sm btn-danger" title="刪除">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
        <% } else { %>
        <tr>
          <td colspan="5" class="text-center py-5">
            <i class="fas fa-users-slash fa-3x text-muted mb-3 d-block"></i>
            <p class="text-muted mb-0">目前沒有任何用戶</p>
            <a href="/admin/users/create" class="btn btn-primary mt-3">
              <i class="fas fa-user-plus me-1"></i>
              新增第一個用戶
            </a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <!-- /.card-body -->
</div>
<!-- /.card -->

