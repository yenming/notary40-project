<!-- Back Button -->
<div class="mb-3">
  <a href="/admin/users" class="btn btn-secondary">
    <i class="fas fa-arrow-left me-1"></i>
    返回用戶列表
  </a>
  <a href="/admin/users/<%= user.id %>/edit" class="btn btn-warning">
    <i class="fas fa-edit me-1"></i>
    編輯用戶
  </a>
  <form method="POST" action="/admin/users/<%= user.id %>/delete" class="d-inline" onsubmit="return confirm('確定要刪除此用戶嗎？此操作無法復原。');">
    <button type="submit" class="btn btn-danger">
      <i class="fas fa-trash me-1"></i>
      刪除用戶
    </button>
  </form>
</div>

<!-- User Profile Card -->
<div class="card card-primary card-outline">
  <div class="card-body box-profile">
    <div class="text-center">
      <div class="img-circle elevation-2 bg-primary d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
        <span class="text-white fw-bold" style="font-size: 48px;"><%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %></span>
      </div>
      <h3 class="profile-username text-center mt-3"><%= user.name || '未命名用戶' %></h3>
      <p class="text-muted text-center">用戶 ID: <%= user.id %></p>
    </div>
  </div>
</div>

<!-- User Information Cards -->
<div class="row">
  <div class="col-md-4">
    <div class="card card-primary card-outline">
      <div class="card-body">
        <div class="text-center">
          <i class="fas fa-envelope fa-3x text-primary mb-3"></i>
          <h6 class="text-uppercase text-muted mb-2">電子郵件</h6>
          <h5 class="mb-0">
            <a href="mailto:<%= user.email %>"><%= user.email %></a>
          </h5>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card card-success card-outline">
      <div class="card-body">
        <div class="text-center">
          <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
          <h6 class="text-uppercase text-muted mb-2">註冊時間</h6>
          <h5 class="mb-0">
            <%= new Date(user.createdAt).toLocaleDateString('zh-TW', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric'
            }) %>
          </h5>
          <small class="text-muted">
            <%= new Date(user.createdAt).toLocaleTimeString('zh-TW', { 
              hour: '2-digit', 
              minute: '2-digit' 
            }) %>
          </small>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card card-info card-outline">
      <div class="card-body">
        <div class="text-center">
          <i class="fas fa-clock fa-3x text-info mb-3"></i>
          <h6 class="text-uppercase text-muted mb-2">最後更新</h6>
          <h5 class="mb-0">
            <%= new Date(user.updatedAt).toLocaleDateString('zh-TW', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric'
            }) %>
          </h5>
          <small class="text-muted">
            <%= new Date(user.updatedAt).toLocaleTimeString('zh-TW', { 
              hour: '2-digit', 
              minute: '2-digit' 
            }) %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Detailed Information Card -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-info-circle me-1"></i>
      詳細資訊
    </h3>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">
        <i class="fas fa-envelope me-2"></i>
        電子郵件
      </dt>
      <dd class="col-sm-9">
        <a href="mailto:<%= user.email %>"><%= user.email %></a>
      </dd>
      
      <dt class="col-sm-3">
        <i class="fas fa-calendar-plus me-2"></i>
        註冊時間
      </dt>
      <dd class="col-sm-9">
        <%= new Date(user.createdAt).toLocaleString('zh-TW', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit',
          second: '2-digit'
        }) %>
      </dd>
      
      <dt class="col-sm-3">
        <i class="fas fa-clock-rotate-left me-2"></i>
        最後更新
      </dt>
      <dd class="col-sm-9">
        <%= new Date(user.updatedAt).toLocaleString('zh-TW', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit',
          second: '2-digit'
        }) %>
      </dd>
    </dl>
  </div>
</div>

