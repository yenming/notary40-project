<!-- Success Message -->
<% if (typeof successMessage !== 'undefined' && successMessage) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <i class="fas fa-check-circle me-2"></i>
  <%= successMessage %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<!-- Posts Table Card -->
<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <i class="fas fa-newspaper me-1"></i>
      最新消息列表
    </h3>
    <div class="card-tools">
      <a href="/admin/posts/create" class="btn btn-primary btn-sm">
        <i class="fas fa-plus me-1"></i>
        新增文章
      </a>
    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-3">
        <div class="info-box">
          <span class="info-box-icon bg-info elevation-1"><i class="fas fa-newspaper"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">總文章數</span>
            <span class="info-box-number"><%= posts ? posts.length : 0 %></span>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="info-box">
          <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check-circle"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">已發布</span>
            <span class="info-box-number"><%= posts ? posts.filter(p => p.isPublished).length : 0 %></span>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="info-box">
          <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-clock"></i></span>
          <div class="info-box-content">
            <span class="info-box-text">草稿</span>
            <span class="info-box-number"><%= posts ? posts.filter(p => !p.isPublished).length : 0 %></span>
          </div>
        </div>
      </div>
    </div>
    
    <table id="postsTable" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th style="width: 50px;">ID</th>
          <th>標題</th>
          <th>分類</th>
          <th>圖片</th>
          <th>狀態</th>
          <th>發布時間</th>
          <th style="width: 200px;">操作</th>
        </tr>
      </thead>
      <tbody>
        <% if (posts && posts.length) { %>
        <% posts.forEach((post) => { %>
        <tr>
          <td><%= post.id %></td>
          <td>
            <strong><%= post.title %></strong>
            <% if (post.excerpt) { %>
            <br>
            <small class="text-muted"><%= post.excerpt.length > 50 ? post.excerpt.substring(0, 50) + '...' : post.excerpt %></small>
            <% } %>
          </td>
          <td>
            <% if (post.category) { %>
            <span class="badge bg-secondary"><%= post.category %></span>
            <% } else { %>
            <span class="text-muted">無</span>
            <% } %>
          </td>
          <td>
            <% if (post.featuredImage) { %>
            <img src="<%= post.featuredImage.startsWith('http') ? post.featuredImage : '/' + post.featuredImage %>" alt="<%= post.title %>" style="max-width: 80px; max-height: 50px; object-fit: cover;" class="img-thumbnail">
            <% } else { %>
            <span class="text-muted">無圖片</span>
            <% } %>
          </td>
          <td>
            <% if (post.isPublished) { %>
            <span class="badge bg-success">已發布</span>
            <% } else { %>
            <span class="badge bg-warning">草稿</span>
            <% } %>
          </td>
          <td>
            <% if (post.publishedAt) { %>
            <i class="far fa-calendar me-1"></i>
            <%= new Date(post.publishedAt).toLocaleDateString('zh-TW', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric'
            }) %>
            <% } else { %>
            <span class="text-muted">未發布</span>
            <% } %>
          </td>
          <td>
            <div class="btn-group" role="group">
              <a href="/admin/posts/<%= post.id %>" class="btn btn-sm btn-info" title="查看">
                <i class="fas fa-eye"></i>
              </a>
              <a href="/admin/posts/<%= post.id %>/edit" class="btn btn-sm btn-warning" title="編輯">
                <i class="fas fa-edit"></i>
              </a>
              <form method="POST" action="/admin/posts/<%= post.id %>/delete" class="d-inline" onsubmit="return confirm('確定要刪除此文章嗎？此操作無法復原。');">
                <button type="submit" class="btn btn-sm btn-danger" title="刪除">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
        <% }); %>
        <% } else { %>
        <tr>
          <td colspan="7" class="text-center py-5">
            <i class="fas fa-newspaper fa-3x text-muted mb-3 d-block"></i>
            <p class="text-muted mb-0">目前沒有任何文章</p>
            <a href="/admin/posts/create" class="btn btn-primary mt-3">
              <i class="fas fa-plus me-1"></i>
              新增第一篇文章
            </a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <!-- /.card-body -->
</div>
<!-- /.card -->

